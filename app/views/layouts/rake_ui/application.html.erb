<!DOCTYPE html>
<html>
<head>
  <title>Rake ui</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "rake_ui/application", media: "all" %>
  <%= javascript_include_tag "rake_ui/application" %>
</head>
<body>

  <!-- Nav Menu -->
  <div class="row header">
    <div class="section">
      <nav>
        <ul class="menu">
          <li><%= link_to "Logs", rake_task_logs_path %></li>
          <li><%= link_to "Rake Tasks", rake_tasks_path %></li>
        </ul>
      </nav>
    </div>
  </div>

  <p id="notice"><%= notice %></p>

  <!-- End Nav Menu -->
  <div class="contents">
    <%= yield %>
  </div>
</body>
</html>
